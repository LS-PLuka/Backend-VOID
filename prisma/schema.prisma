// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Banco de Dados VOID - MySQL
model usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senha     String
  role      String    @default("cliente")
  criadoEm  DateTime  @default(now())

  sacola    sacola?
  favoritos favorito[]
  cartoes   cartao[]
}

model marca {
  id         Int       @id @default(autoincrement())
  nome       String    @unique
  descricao  String?
  imagemUrl  String
  produtos   produto[]
}

model produto {
  id          Int        @id @default(autoincrement())
  nome        String
  descricao   String?
  preco       Float
  estoque     Int
  imagem1Url  String
  imagem2Url  String
  criadoEm    DateTime   @default(now())

  marcaId Int
  marca   marca        @relation(fields: [marcaId], references: [id])

  itensSacola itemSacola[]
  favoritos   favorito[]
}

model sacola {
  id        Int         @id @default(autoincrement())
  criadoEm  DateTime    @default(now())

  usuarioId Int  @unique
  usuario   usuario     @relation(fields: [usuarioId], references: [id])

  itens     itemSacola[]
}

model itemSacola {
  id         Int      @id @default(autoincrement())
  quantidade Int      @default(1)

  sacolaId   Int
  sacola     sacola   @relation(fields: [sacolaId], references: [id])

  produtoId  Int
  produto    produto  @relation(fields: [produtoId], references: [id])
}

model favorito {
  id         Int      @id @default(autoincrement())
  criadoEm   DateTime @default(now())

  usuarioId  Int
  usuario    usuario  @relation(fields: [usuarioId], references: [id])

  produtoId  Int
  produto    produto  @relation(fields: [produtoId], references: [id])

  @@unique([usuarioId, produtoId])
}

model cartao {
  id              Int       @id @default(autoincrement())
  usuarioId       Int
  usuario         usuario   @relation(fields: [usuarioId], references: [id])
  
  numero          String
  nomeTitular     String
  validadeMes     Int
  validadeAno     Int
  codigoSeguranca String

  criadoEm        DateTime  @default(now())

  @@index([usuarioId])
}
